{
  "info": {
    "name": "UES Gaming - Elasticsearch & MinIO API",
    "description": "Collection for testing Elasticsearch search and MinIO file upload/download",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "File Management",
      "item": [
        {
          "name": "Upload Image and PDF to Center",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "image",
                  "type": "file",
                  "src": "/path/to/image.jpg"
                },
                {
                  "key": "pdf",
                  "type": "file",
                  "src": "/path/to/document.pdf"
                }
              ]
            },
            "url": {
              "raw": "http://localhost:8080/api/centri/1/upload",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "centri", "1", "upload"]
            },
            "description": "Upload image and/or PDF to a specific center. Both files are optional. Admin only."
          }
        },
        {
          "name": "Download PDF from Center",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:8080/api/centri/1/pdf",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "centri", "1", "pdf"]
            },
            "description": "Download the PDF document for a specific center"
          }
        }
      ]
    },
    {
      "name": "Elasticsearch Search",
      "item": [
        {
          "name": "Search All Fields",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:8080/api/centri/search?query=фудбал&type=all",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "centri", "search"],
              "query": [
                {
                  "key": "query",
                  "value": "фудбал"
                },
                {
                  "key": "type",
                  "value": "all"
                }
              ]
            },
            "description": "Search centers by name, description, and PDF content. Supports Cyrillic and Latin."
          }
        },
        {
          "name": "Search by Name (Naziv)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:8080/api/centri/search?query=спорт&type=naziv",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "centri", "search"],
              "query": [
                {
                  "key": "query",
                  "value": "спорт"
                },
                {
                  "key": "type",
                  "value": "naziv"
                }
              ]
            },
            "description": "Search centers only by name"
          }
        },
        {
          "name": "Search by Description (Opis)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:8080/api/centri/search?query=odličan&type=opis",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "centri", "search"],
              "query": [
                {
                  "key": "query",
                  "value": "odličan"
                },
                {
                  "key": "type",
                  "value": "opis"
                }
              ]
            },
            "description": "Search centers only by description"
          }
        },
        {
          "name": "Search by PDF Content",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:8080/api/centri/search?query=баскет&type=pdf",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "centri", "search"],
              "query": [
                {
                  "key": "query",
                  "value": "баскет"
                },
                {
                  "key": "type",
                  "value": "pdf"
                }
              ]
            },
            "description": "Search centers only by PDF document content"
          }
        },
        {
          "name": "Search Cyrillic Example",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:8080/api/centri/search?query=КОШАРКА&type=all",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "centri", "search"],
              "query": [
                {
                  "key": "query",
                  "value": "КОШАРКА"
                },
                {
                  "key": "type",
                  "value": "all"
                }
              ]
            },
            "description": "Example: Search with Cyrillic uppercase - will match 'košarka', 'KOŠARKA', 'кошарка'"
          }
        },
        {
          "name": "Search Latin Example",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:8080/api/centri/search?query=fudbal&type=all",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "centri", "search"],
              "query": [
                {
                  "key": "query",
                  "value": "fudbal"
                },
                {
                  "key": "type",
                  "value": "all"
                }
              ]
            },
            "description": "Example: Search with Latin - will match 'фудбал', 'FUDBAL', 'Fudbal'"
          }
        }
      ]
    },
    {
      "name": "Admin Operations",
      "item": [
        {
          "name": "Reindex All Centers",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:8080/api/centri/reindex",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "centri", "reindex"]
            },
            "description": "Reindex all centers in Elasticsearch. Admin only. Use this after bulk data imports."
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "jwt_token",
      "value": "your_jwt_token_here",
      "type": "string"
    }
  ]
}

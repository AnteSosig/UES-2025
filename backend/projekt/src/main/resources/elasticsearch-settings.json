{
  "max_ngram_diff": 20,
  "analysis": {
    "char_filter": {
      "cyrillic_to_latin": {
        "type": "mapping",
        "mappings": [
          "А => A", "а => a",
          "Б => B", "б => b",
          "В => V", "в => v",
          "Г => G", "г => g",
          "Д => D", "д => d",
          "Ђ => Đ", "ђ => đ",
          "Е => E", "е => e",
          "Ж => Ž", "ж => ž",
          "З => Z", "з => z",
          "И => I", "и => i",
          "Ј => J", "ј => j",
          "К => K", "к => k",
          "Л => L", "л => l",
          "Љ => Lj", "љ => lj",
          "М => M", "м => m",
          "Н => N", "н => n",
          "Њ => Nj", "њ => nj",
          "О => O", "о => o",
          "П => P", "п => p",
          "Р => R", "р => r",
          "С => S", "с => s",
          "Т => T", "т => t",
          "Ћ => Ć", "ћ => ć",
          "У => U", "у => u",
          "Ф => F", "ф => f",
          "Х => H", "х => h",
          "Ц => C", "ц => c",
          "Ч => Č", "ч => č",
          "Џ => Dž", "џ => dž",
          "Ш => Š", "ш => š"
        ]
      }
    },
    "tokenizer": {
      "ngram_tokenizer": {
        "type": "ngram",
        "min_gram": 1,
        "max_gram": 20,
        "token_chars": ["letter", "digit"]
      }
    },
    "filter": {
      "serbian_stop": {
        "type": "stop",
        "stopwords": "_serbian_"
      },
      "serbian_stemmer": {
        "type": "stemmer",
        "language": "serbian"
      }
    },
    "analyzer": {
      "serbian_custom_analyzer": {
        "type": "custom",
        "char_filter": [
          "cyrillic_to_latin"
        ],
        "tokenizer": "standard",
        "filter": [
          "lowercase",
          "serbian_stop"
        ]
      },
      "serbian_ngram_analyzer": {
        "type": "custom",
        "char_filter": [
          "cyrillic_to_latin"
        ],
        "tokenizer": "ngram_tokenizer",
        "filter": [
          "lowercase",
          "serbian_stemmer"
        ]
      },
      "serbian_search_analyzer": {
        "type": "custom",
        "char_filter": [
          "cyrillic_to_latin"
        ],
        "tokenizer": "standard",
        "filter": [
          "lowercase",
          "serbian_stemmer"
        ]
      }
    }
  }
}
